[user]
  name = Jesse Hoyos
  email = jesse@mojotech.com

[alias]
  aliases = config --get-regexp alias

  b = branch -vv
  bx = branch -d
  bX = branch -D
  branches = branch -a

  f = fetch
  p = pull --autostash
  a = add
  aa = add --all
  fp = push --force-with-lease
  c = commit
  d = "!git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
  s = status --short --branch
  l = log --pretty=oneline -n 20 --graph --abbrev-commit

  # fuzzy branch switching
  bb = "!bb() { git switch \"$(git branch -a | cut -c 3- | fzy)\"; }; bb"

  # set upstream branch
  up = "!up() { git push -u origin \"$(git symbolic-ref --short HEAD)\"; }; up"

  # switch to a branch, create it if necesary
  go = "!go() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; go"

  # delete merged branches
  tidy = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
  trim = "!git fetch -p && git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D"

  # open gitui, requires gitui to be installed
  ui = "!gitui"

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = green
  changed = yellow
  untracked = cyan

[diff]
  tool = nvimdiff
  external = difft

[difftool]
  prompt = false

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[merge]
  tool = nvimdiff
  conflictStyle = diff3

[mergetool]
  prompt = true

[mergetool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c 'wincmd w' -c 'wincmd J'"

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[init]
  defaultBranch = main
