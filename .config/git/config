[user]
  name = Jesse Hoyos
  email = jesse@mojotech.com

[alias]
  aliases = config --get-regexp alias

  a = add
  aa = add --all

  b = branch -vv
  bb = branch -a -vv
  bx = branch -d

  c = commit
  cc = "!git add --all && git commit -av" 
  amend = commit --amend --reuse-message=HEAD

  d = "!git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"

  f = fetch --prune

  p = push
  pf = push --force-with-lease

  r = "!r() { git fetch origin \"$1\"; git rebase origin/\"$1\" -i; }; r"
  rb = "!r() { git fetch origin \"$1\"; git rebase origin/\"$1\" -i --keep-base; }; r"

  z = stash
  zz = stash save -u

  l = log --pretty=oneline -n 20 --graph --abbrev-commit
  s = status --short --branch

  hide = update-index --assume-unchanged
  unhide = update-index --no-assume-unchanged

  up = "!up() { git push -u origin \"$(git symbolic-ref --short HEAD)\"; }; up"
  go = "!go() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; go"
  trim = "!t() { git fetch --all --prune; git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D; }; t"

[init]
  defaultBranch = main

[branch]
  sort= -committerdate

[diff]
  algorithm = histogram
  external = difft

[push]
  default = current

[rebase]
  autosquash = true
  autostash = true

[rerere]
  enabled = true
