[user]
  name = Jesse Hoyos
  email = jesse@mojotech.com

[alias]
  aliases = config --get-regexp alias

  a = add
  aa = add --all

  b = branch -vv
  bb = branch -a -vv
  bx = branch -d

  c = commit
  cc = "!git add --all && git commit -av" 
  extend = commit --amend --reuse-message=HEAD
  undo = reset --soft @~

  d = "!git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"

  f = fetch --prune

  p = push
  pf = push --force-with-lease

  r = "!r() { git fetch origin \"$1\"; git rebase origin/\"$1\"; }; r"
  rb = "!r() { git fetch origin \"$1\"; git rebase origin/\"$1\" --keep-base; }; r"

  w = worktree
  wa = worktree add
  wl = worktree list

  z = stash
  zz = stash save -u

  l = log --pretty=oneline -n 20 --graph --abbrev-commit
  s = status --short --branch

  hide = update-index --assume-unchanged
  unhide = update-index --no-assume-unchanged

  up = "!up() { git push -u origin \"$(git symbolic-ref --short HEAD)\"; }; up"
  go = "!go() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; go"
  trim = "!t() { git fetch --all --prune; git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D; }; t"

[init]
  defaultBranch = main

[branch]
  sort= -committerdate

[commit]
  verbose = true

[diff]
  algorithm = histogram
  external = difft
  colorMoved = plain
  renames = true
  mnemonicPrefix = true

[merge]
  conflictstyle = diff3

[merge "mergiraf"]
  name = mergiraf
  driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P -l %L


[pull]
  rebase = true

[push]
  default = current
  autoSetupRemote = true

[fetch]
  prune = true
  pruneTags = true
  all = true

[rebase]
  autosquash = true
  autostash = true
  updateRefs = true

[rerere]
  enabled = true
  autoupdate = true
