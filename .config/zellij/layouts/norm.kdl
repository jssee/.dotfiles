layout {
  default_tab_template {
    children
    pane size=1 borderless=true {
      plugin location="file:~/.config/zellij/plugins/zjstatus.wasm" {
        format_left   "{mode} #[bold]{tabs}"
        format_right  "{command_git_branch} {session} {datetime}"
        format_space  ""

        mode_normal          "#[bg=normal,bold] N "
        mode_locked          "#[fg=#ffffff,bg=magenta,bold] L "
        mode_pane            "#[fg=#ffffff,bg=cyan,bold] P "
        mode_tab             "#[fg=#ffffff,bg=red,bold] T "
        mode_session         "#[fg=#ffffff,bg=blue,bold] S "
        mode_tmux            "#[fg=#ffffff,bg=green,bold] â€¦ "
        mode_default_to_mode "tmux"

        tab_normal   "#[fg=normal] {name} "
        tab_active   "#[fg=green,bold,italic] {name} "

        command_git_branch_command     "git rev-parse --abbrev-ref HEAD"
        command_git_branch_format      "#[fg=magenta] {stdout} "
        command_git_branch_interval    "10"
        command_git_branch_rendermode  "static"

        datetime        "#[fg=lightgrey,bold] {format} "
        datetime_format "%A, %d %b %Y %H:%M"
        datetime_timezone "America/New_York"
      }
    }
  }

  tab name="edit" focus=true {
    pane
  }

  tab name="run" {
    pane
  }

  tab name="scratch" {
    pane
  }
}
